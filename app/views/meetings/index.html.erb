<%= stylesheet_link_tag "application" %>

<p id="notice"><%= notice %></p>

<div class="title">Proximos eventos</div>
<div class="container">
  

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Actividad</th>
          <th scope="col">Dia</th>
          <th scope="col">Hora Inicio</th>
          <th scope="col">Hora fin</th>
          <th scope="col">Profesor</th>
          <th scope="col">Cupos</th>
          <th scope="col">Lugar</th>
          <th scope="col">Equipamiento</th>
          <th scope="col">Comentarios</th>
          <th scope="col">Monday</th>

          <th scope="col"></th>

        </tr>
      </thead>
      <tbody>
        <% @meetings.each do |meeting| %>
          <tr>
            <td><%= meeting.name %></td>
            <td>@current</td>

            <td><%= meeting.start_hour %>:<%= meeting.start_minute %></td>
            <td><%= meeting.end_hour %>:<%= meeting.start_minute %></td>

            <td><%= meeting.teacher %></td> 
            <td><%= meeting.stock %></td> 
            <td><%= meeting.place %></td> 
            <td><%= meeting.equipment %></td> 
            <td><%= meeting.comment%></td>
            <td><%= meeting.monday%></td>

            <td></td>

            <td><%= link_to 'Ver mas', meeting %></td>
            <td><%= link_to 'Editar', edit_meeting_path(meeting) %></td> 
            <td><%= button_to 'Delete', meeting, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br/>
    <strong><%= link_to 'New Meeting', new_meeting_path %></strong>
    <br/>
    <br/>
    <br/>
     
  </div> 



 

